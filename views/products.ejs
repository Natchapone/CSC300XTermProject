<%- include('./partials/head') %>

<!-- Content Security Policy-->
<meta http-equiv="Content-Security-Policy" content="default-src 'self' http://lazyload.org;">

<div class="splashbox">
    <h2 class="ph2">Our Products</h2>
    <div class="pboxes">
        <% products.slice(0, 4).forEach(product => { %>
            <div class="pbox"><%= product.name %> <br> Price: <%= product.price %>
                <a href="http://localhost:8000/products/item/<%= product.id %>"><img src="<%= product.imagepath %>" alt="<%= product.name %>"></a>
            </div>
        <% }); %>
    </div>
    <div class="pboxes2">
        <% products.slice(4).forEach(product => { %>
            <div class="pbox"><%= product.name %> <br> Price: <%= product.price %>
                <a href="http://localhost:8000/products/item/<%= product.id %>"><img src="<%= product.imagepath %>" alt="<%= product.name %>"></a>
            </div>
        <% }); %>
    </div>
</div>



<%- include('./partials/footer') %>



<%- include('./partials/head') %>
<link rel="stylesheet" href="/styles/cart.css" />
    <div id="containerCenter">
        <div class="shoppingCart">
            <h1 id="cartHeader">
                Your Cart
            </h1>
            <% cartItems.forEach(item=> { %>
                <div class="cartItem">
                    <div id="cartImg">
                        <img id="<%= item.imagepath %>" src="<%= item.imagepath %>">
                    </div>
                    <div id="itemInfo">
                        <p>
                            <%= item.product_name %>
                        </p>
                        <p id="price">Price: $<%= item.price %>
                        </p>

                        <div id="qty">
                            <input type="text" value="<%= item.quantity %>" onchange="updateQuantity('<%= item.productID %>', this.value)">
                            <form action="/cart/delete/<%= item.productID %>" method="POST">
                                <input type="hidden" name="productID" value="<%= item.productID %>">
                                <button type="submit">Remove</button>
                            </form>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>

                    <div id="total">
                        <div id="totalTxt">
                            <div id="category">Subtotal:</div>
                            <div id="category">Tax - 6.75%:</div>
                            <div id="category">Delivery Fee:</div>
                            <div id="category">Total:</div>

                        </div>
                        <div id="totalNum">
                            <div id="amount">$<%= subtotal %>
                            </div>
                            <div id="amount">$<%= tax %>
                            </div>
                            <div id="amount">$<%= deliveryFee %>
                            </div>
                            <div id="amount">$<%= total %>
                            </div>
                        </div>
                    </div>

                    <div id="checkout">
                        <form action="/cart/checkout" method="POST">
                            <button type="submit">Check Out</button>
                        </form>
                    </div>

        </div>

</div>
<%- include('./partials/footer') %>

